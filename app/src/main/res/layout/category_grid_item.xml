<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_margin">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/card_category_cover_height"
            android:layout_height="@dimen/card_category_cover_height"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:textAlignment="center"
            android:paddingLeft="@dimen/card_category_title_padding"
            android:paddingRight="@dimen/card_category_title_padding"
            android:paddingTop="@dimen/card_category_title_padding"
            android:textSize="@dimen/card_category_title" />


        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:paddingBottom="@dimen/product_price_padding_bottom"
            android:textAlignment="center"
            android:paddingLeft="@dimen/card_category_title_padding"
            android:paddingRight="@dimen/card_category_title_padding"
            android:textStyle="bold"
            android:visibility="gone"
            android:textSize="@dimen/product_price" />

        <TextView
            android:id="@+id/tv_number_of_stores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price"
            android:textAlignment="center"
            android:visibility="gone"
            android:paddingLeft="@dimen/card_category_title_padding"
            android:paddingRight="@dimen/card_category_title_padding"
            android:textSize="@dimen/card_category_title" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>