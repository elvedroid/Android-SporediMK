<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.emobile.myitmarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="org.emobile.myitmarket.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor"
        tools:ignore="GoogleAppIndexingWarning">

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.activity.SearchableActivity" />

        <activity
            android:name="org.emobile.myitmarket.ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="adroid.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".base.main.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity
            android:name="org.emobile.myitmarket.base.BaseActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>